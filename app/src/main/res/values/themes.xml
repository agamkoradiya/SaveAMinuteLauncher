<resources>
    <!-- Base application theme. -->
    <style name="Theme.SaveAMinuteLauncher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/school_bus_yellow</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Top bar and Navigation bar transparency -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!--        TextView Properties-->
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="App1stTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/school_bus_yellow</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="App2ndTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/cinnabar</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="App3rdTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="App4thTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/wild_watermelon</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>